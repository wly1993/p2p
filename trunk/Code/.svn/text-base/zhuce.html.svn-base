<script>

    $('#callUs').tooltip();

    //    表单验证
    $(function(){
        $('#regform').bootstrapValidator({
            message: 'This value is not valid',
            //全局的提示
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            //图标的设置
            //group: '.form-group',
            //规则
            fields: {

                username: {
                    message: '用户名是无效的',
                    validators: {
                        notEmpty: {
                            message: '用户名是必需的,不能是空的'
                        },
                        regexp: {
                            regexp: /[\u4e00-\u9fa5_a-zA-Z0-9_]{2,16}/,
                            message: '用户名为2~16位字母，数字，符号或中文！'
                        },
                        different: {
                            field: 'password',
                            message: '用户名和密码不能相同'
                        }
                    }
                },

                pwd: {
                    validators: {
                        notEmpty: {
                            message: '密码是必需的,不能是空的'
                        },
                        identical: {
                            field: 'confirmPwd',
                            message: '密码和确认是不一样的'
                        },
                        different: {
                            field: 'username',
                            message: '密码不能与用户名相同'
                        }
                    }
                },
                confirmPwd: {
                    validators: {
                        notEmpty: {
                            message: '确认密码是必需的,不能是空的'
                        },
                        identical: {
                            field: 'pwd',
                            message: '密码和确认是不一样的'
                        },
                        different: {
                            field: 'username',
                            message: '密码不能与用户名相同'
                        }
                    }

                }
            }
        });
    })
</script>
